{
  "name": "blog-app",
  "version": "0.0.0",
  "private": true,
  "scripts": {
				"install:client": "cd ./client && npm install",
				"start-server:dev": "nodemon ./bin/www",
				"start": "node ./bin/www",
				"test": "mocha",
    "build": "cd ./client && ember build",
    "lint": "eslint app.js routes/** db/** client/app/**/*.js -c eslintrc.json",
    "start-client:dev": "cd ./client && ember server",
    "start:dev": "concurrently \"npm run start-server:dev\" \"npm run start-client:dev\" "
  },
  "dependencies": {
    "bcrypt": "^1.0.2",
    "body-parser": "^1.17.2",
    "cookie-parser": "~1.4.3",
    "cors": "^2.8.4",
    "debug": "~2.6.3",
    "express": "~4.15.2",
    "express-session": "^1.15.4",
    "morgan": "~1.8.1",
    "passport": "^0.3.2",
    "passport-local": "^1.0.0",
    "sessionstore": "^1.2.18",
    "sqlite3": "^3.1.8"
  },
  "devDependencies": {
				"babel-eslint": "^7.2.3",
				"concurrently": "^3.5.0",
    "eslint": "^4.2.0",
    "mocha": "^3.4.2",
    "nodemon": "^1.11.0",
    "supertest": "^3.0.0"
  }
}
